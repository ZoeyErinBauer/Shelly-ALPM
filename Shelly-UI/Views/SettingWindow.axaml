<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewModels="clr-namespace:Shelly_UI.ViewModels"
             xmlns:lang="clr-namespace:Shelly_UI.Assets"
             xmlns:avalonia="clr-namespace:Material.Icons.Avalonia;assembly=Material.Icons.Avalonia"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Shelly_UI.Views.SettingWindow"
             x:DataType="viewModels:SettingViewModel"
             x:CompileBindings="True"
             Background="{DynamicResource SystemChromeLowColor}">
    <Grid>
        <TabControl Grid.Row="0"
                    Margin="0 16"
                    TabStripPlacement="Top">

            <TabItem Header="{x:Static lang:Resources.AppSettings}" Foreground="{DynamicResource SystemBaseHighColor}">
                <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
                    <StackPanel Orientation="Vertical" Spacing="8">
                        <ToggleSwitch Content="{x:Static lang:Resources.ToggleConsole}"
                                      IsChecked="{Binding EnableConsole, Mode=TwoWay}"
                                      Foreground="{DynamicResource SystemBaseHighColor}" />
                        <ToggleSwitch Content="{x:Static lang:Resources.ToggleAUR}"
                                      IsChecked="{Binding EnableAur, Mode=TwoWay}"
                                      Foreground="{DynamicResource SystemBaseHighColor}">
                        </ToggleSwitch>
                        <ToggleSwitch Content="{x:Static lang:Resources.ToggleFlatpak}"
                                      IsChecked="{Binding EnableFlatpak, Mode=TwoWay}"
                                      PointerPressed="OnFlatpakPointerPressed"
                                      Foreground="{DynamicResource SystemBaseHighColor}">
                        </ToggleSwitch>
                        <ToggleSwitch Content="{x:Static lang:Resources.ToggleHorizontalMenu}"
                                      IsChecked="{Binding UseHorizontalMenu, Mode=TwoWay}"
                                      Foreground="{DynamicResource SystemBaseHighColor}">
                        </ToggleSwitch>
                        <ToggleSwitch Content="{x:Static lang:Resources.ToggleTrayIcon}"
                                      IsChecked="{Binding EnableTray, Mode=TwoWay}"
                                      Foreground="{DynamicResource SystemBaseHighColor}">
                        </ToggleSwitch>
                        <StackPanel Orientation="Horizontal" Spacing="10">
                            <TextBlock Text="{x:Static lang:Resources.ToggleTrayCheckInterval}"
                                       VerticalAlignment="Center"
                                       Foreground="{DynamicResource SystemBaseHighColor}" />
                            <NumericUpDown Value="{Binding TrayCheckIntervalHours, Mode=TwoWay}"
                                           Minimum="1"
                                           Maximum="96"
                                           Increment="1"
                                           Width="100"
                                           FormatString="0" />
                        </StackPanel>
                        <ToggleSwitch Content="{x:Static lang:Resources.ToggleNoConfirm}"
                                      IsChecked="{Binding NoConfirm, Mode=TwoWay}"
                                      Foreground="{DynamicResource SystemBaseHighColor}">
                        </ToggleSwitch>
                        <Button Content="{x:Static lang:Resources.ForceSync}"
                                Command="{Binding ForceSyncUpdateCommand}"
                                HorizontalAlignment="Left"
                                HorizontalContentAlignment="Center"
                                Background="{DynamicResource SystemAccentColor}"
                                Foreground="{DynamicResource SystemBaseHighColor}"
                                Width="250" />
                        <Button Content="{Binding UpdateAvailableText}"
                                Command="{Binding CheckForUpdatesCommand}"
                                IsVisible="{Binding IsUpdateCheckVisible}"
                                HorizontalAlignment="Left"
                                HorizontalContentAlignment="Center"
                                Padding="0,10"
                                Background="{DynamicResource SystemAccentColor}"
                                Foreground="{DynamicResource SystemBaseHighColor}"
                                Width="250" />
                    </StackPanel>
                </ScrollViewer>
            </TabItem>
            <TabItem Header="{x:Static lang:Resources.Appearance}" Foreground="{DynamicResource SystemBaseHighColor}">
                <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
                    <StackPanel Orientation="Vertical" Spacing="8" Margin="0,10">
                        <TextBlock Text="{x:Static lang:Resources.AccentHexColor}" FontSize="14"
                                   Foreground="{DynamicResource SystemBaseHighColor}" />
                        <Grid ColumnDefinitions="*, Auto" HorizontalAlignment="Left">
                            <ColorPicker Grid.Column="0" Color="{Binding AccentHex, Mode=TwoWay}"
                                         IsEnabled="{Binding !UseKdeColor }" />
                            <Button Grid.Column="1" Content="{x:Static lang:Resources.ApplyAccent} "
                                    HorizontalAlignment="Stretch"
                                    IsEnabled="{Binding !UseKdeColor }"
                                    HorizontalContentAlignment="Center"
                                    Margin="20,0"
                                    Padding="10,7"
                                    Command="{Binding ApplyCustomAccent}"
                                    Background="{DynamicResource SystemAccentColor}"
                                    Foreground="{DynamicResource SystemBaseHighColor}" />
                        </Grid>
                        <ToggleSwitch Content="{x:Static lang:Resources.ToggleLightDarkMode}"
                                      IsEnabled="{Binding !UseKdeColor }"
                                      IsChecked="{Binding IsDarkMode, Mode=TwoWay}" />
                        <TextBlock Text="{x:Static lang:Resources.DefaultPageOnStartup}" FontSize="14" />
                        <ComboBox
                            ItemsSource="{Binding DefaultViews}"
                            SelectedItem="{Binding DefaultScreenEnum}"
                            Width="200" />
                        <ToggleSwitch Content="{x:Static lang:Resources.ToggleKDEColorScheme}"
                                      IsChecked="{Binding UseKdeColor, Mode=TwoWay}" />
                    </StackPanel>
                </ScrollViewer>
            </TabItem>
        </TabControl>
        <StackPanel HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="10">
            <TextBlock Text="{Binding AppVersion}" Opacity=".7" HorizontalAlignment="Right" Padding="10, 0"
                       Foreground="{DynamicResource SystemBaseHighColor}" />
            <Button
                Padding="0"
                Click="OpenUrlCrossPlatform"
                Background="Transparent">
                <Grid ColumnDefinitions="*, Auto" HorizontalAlignment="Left">
                    <avalonia:MaterialIcon Kind="CoffeeToGo" HorizontalAlignment="Right"
                                           Foreground="{DynamicResource SystemBaseHighColor}"
                                           Width="20"
                                           Height="20" />
                    <TextBlock Grid.Column="1" Text="{x:Static lang:Resources.BuyMeACoffeeButton}" Opacity=".7" Padding="10, 0"
                               Foreground="{DynamicResource SystemBaseHighColor}">
                    </TextBlock>
                </Grid>
            </Button>
        </StackPanel>
        <Border Background="#80000000"
                IsVisible="{Binding ShowFlatpakDialog}"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch">
            <Border Background="{DynamicResource SystemChromeLowColor}"
                    BorderBrush="{DynamicResource SystemBaseLowColor}"
                    CornerRadius="8"
                    Padding="20"
                    Width="300"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    BoxShadow="0 10 30 0 #A0000000">
                <StackPanel Spacing="15">
                    <TextBlock Text="{x:Static lang:Resources.FlatpakWarning}" FontWeight="Bold" FontSize="18"
                               HorizontalAlignment="Center" Foreground="{DynamicResource SystemBaseHighColor}" />
                    <TextBlock Text="{x:Static lang:Resources.FlatpakDependency}" TextWrapping="Wrap"
                               HorizontalAlignment="Center" TextAlignment="Center"
                               Foreground="{DynamicResource SystemBaseHighColor}" />
                    <Grid ColumnDefinitions="*,*">
                        <Button Grid.Column="0" Content="{x:Static lang:Resources.Cancel}"
                                HorizontalAlignment="Stretch" Margin="0,0,5,0"

                                Command="{Binding CancelFlatpakDialog}" />
                        <Button Grid.Column="1" Content="{x:Static lang:Resources.Install}"
                                Background="{DynamicResource SystemAccentColor}" HorizontalAlignment="Stretch"
                                Command="{Binding InstallFlatpakCommand}" />
                    </Grid>
                </StackPanel>
            </Border>
        </Border>
        <Border Background="#80000000"
                IsVisible="{Binding ShowAurDialog}"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch">
            <Border Background="{DynamicResource SystemChromeLowColor}"
                    BorderBrush="{DynamicResource SystemBaseLowColor}"
                    CornerRadius="8"
                    Padding="20"
                    Width="300"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    BoxShadow="0 10 30 0 #A0000000">
                <StackPanel Spacing="15">
                    <TextBlock Text="{x:Static lang:Resources.AURWarning}" FontWeight="UltraBold" FontSize="18"
                               HorizontalAlignment="Center" Foreground="{DynamicResource SystemBaseHighColor}" />
                    <TextBlock
                        Text="{x:Static lang:Resources.AURDisclaimer}"
                        TextWrapping="Wrap"
                        HorizontalAlignment="Center" FontWeight="ExtraBold" TextAlignment="Center"
                        Foreground="{DynamicResource SystemBaseHighColor}" />
                    <Grid ColumnDefinitions="*,*">
                        <Button Grid.Column="0" Content="{x:Static lang:Resources.Cancel}"
                                HorizontalAlignment="Stretch" Margin="0,0,5,0"
                                Command="{Binding CancelAurDialog}" />
                        <Button Grid.Column="1" Content="{x:Static lang:Resources.Confirm}"
                                Background="{DynamicResource SystemAccentColor}" HorizontalAlignment="Stretch"
                                Command="{Binding ConfirmAurWarningCommand}" />
                    </Grid>
                </StackPanel>
            </Border>
        </Border>
    </Grid>
</UserControl>