<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:lang="clr-namespace:Shelly_UI.Assets"
             xmlns:avalonia="clr-namespace:Material.Icons.Avalonia;assembly=Material.Icons.Avalonia"
             xmlns:models="clr-namespace:Shelly_UI.Models"
             xmlns:viewModels="clr-namespace:Shelly_UI.ViewModels"
             xmlns:customControls="clr-namespace:Shelly_UI.CustomControls"
             xmlns:menus="clr-namespace:Shelly_UI.CustomControls.Menus"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Shelly_UI.Views.PackageManagement"
             x:DataType="viewModels:PackageManagementViewModel"
             x:CompileBindings="True">
    <UserControl.Styles>
        <Style Selector="DataGridColumnHeader">
            <Setter Property="Background" Value="{DynamicResource SystemAccentColor}" />
            <Setter Property="Foreground" Value="{DynamicResource SystemBaseHighColor}" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="BorderBrush" Value="{DynamicResource SystemAccentColor}" />
            <Setter Property="SeparatorBrush" Value="Transparent" />
        </Style>
    </UserControl.Styles>
    <Border CornerRadius="12" ClipToBounds="True" Background="{DynamicResource SystemChromeLowColor}">
        <customControls:ConsoleSplitControl
            IsBottomPanelVisible="{Binding IsBottomPanelVisible}"
            IsBottomPanelCollapsed="{Binding IsBottomPanelCollapsed, Mode=TwoWay}">
            <customControls:ConsoleSplitControl.MainContent>
                <Grid Background="{DynamicResource SystemChromeLowColor}">
                    <Grid RowDefinitions="Auto,*">
                        <menus:HeaderRow
                            Title="{x:Static lang:Resources.RemovePackages}"
                            TitleIcon="Trash"
                            ShowTitleButton="True"
                            TitleCommand="{Binding ToggleConfirmAction}"
                            SearchWatermark="{x:Static lang:Resources.SearchPackages}"
                            SearchText="{Binding SearchText, Mode=TwoWay}"
                            SyncCommand="{Binding RefreshCommand}"
                            SyncTooltip="{x:Static lang:Resources.Sync}"
                            SyncIcon="Sync"
                            ShowCheckbox="True"
                            CheckboxContent="Cascade"
                            IsChecked="{Binding IsCascade, Mode=TwoWay}"/>
                        <DataGrid
                            Name="RemoveDataGrid"
                            Grid.Row="1"
                            ItemsSource="{Binding AvailablePackages}"
                            AutoGenerateColumns="False"
                            CanUserResizeColumns="True"
                            IsReadOnly="True"
                            GridLinesVisibility="None"
                            DoubleTapped="DataGrid_DoubleTapped">
                            <DataGrid.Columns>
                                <DataGridTextColumn
                                    Header="{x:Static lang:Resources.PackageName}"
                                    Binding="{Binding Name}"
                                    Width="*" />
                                <DataGridTextColumn
                                    Header="{x:Static lang:Resources.Version}"
                                    Binding="{Binding Version}"
                                    Width="160" />
                                <DataGridTemplateColumn
                                    Header=""
                                    CanUserResize="False"
                                    Width="60">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <CheckBox IsChecked="{Binding IsChecked, Mode=TwoWay}"
                                                      HorizontalAlignment="Center" />
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Grid>
                    <Border Background="#80000000"
                            IsVisible="{Binding ShowConfirmDialog}"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Stretch">
                        <Border Background="{DynamicResource SystemChromeLowColor}"
                                BorderBrush="{DynamicResource SystemBaseLowColor}"
                                CornerRadius="8"
                                Padding="20"
                                Width="300"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                BoxShadow="0 10 30 0 #A0000000">
                            <StackPanel Spacing="15">
                                <TextBlock Text="{x:Static lang:Resources.AreYouSure}" FontWeight="Bold" FontSize="18"
                                           HorizontalAlignment="Center" />
                                <TextBlock Text="{x:Static lang:Resources.WillRemovePackages}" TextWrapping="Wrap"
                                           HorizontalAlignment="Center" TextAlignment="Center" />
                                <Grid ColumnDefinitions="*,*">
                                    <Button Grid.Column="0" Content="{x:Static lang:Resources.Cancel}"
                                            HorizontalAlignment="Stretch" Margin="0,0,5,0"
                                            Command="{Binding ToggleConfirmAction}" />
                                    <Button Grid.Column="1" Content="{x:Static lang:Resources.Remove}"
                                            Background="{DynamicResource SystemAccentColor}"
                                            HorizontalAlignment="Stretch"
                                            Command="{Binding RemovePackagesCommand}" />
                                </Grid>
                            </StackPanel>
                        </Border>
                    </Border>
                </Grid>
            </customControls:ConsoleSplitControl.MainContent>
            <customControls:ConsoleSplitControl.BottomContent>
                <Grid IsVisible="{Binding !IsBottomPanelCollapsed}">
                    <ScrollViewer>
                        <customControls:RichConsoleControl Logs="{Binding Logs}" />
                    </ScrollViewer>
                </Grid>
            </customControls:ConsoleSplitControl.BottomContent>
        </customControls:ConsoleSplitControl>
    </Border>
</UserControl>