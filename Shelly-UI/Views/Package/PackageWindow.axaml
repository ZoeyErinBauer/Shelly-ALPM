<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:lang="clr-namespace:Shelly_UI.Assets"
             xmlns:avalonia="clr-namespace:Material.Icons.Avalonia;assembly=Material.Icons.Avalonia"
             xmlns:models="clr-namespace:Shelly_UI.Models"
             xmlns:converters="clr-namespace:Shelly_UI.Converters"
             xmlns:customControls="clr-namespace:Shelly_UI.CustomControls"
             xmlns:menus="clr-namespace:Shelly_UI.CustomControls.Menus"
             xmlns:packages="clr-namespace:Shelly_UI.ViewModels.Packages"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:DataType="packages:PackageViewModel"
             x:Class="Shelly_UI.Views.Package.PackageWindow"
             x:CompileBindings="True">

        <UserControl.Styles>
            <Style Selector="DataGridColumnHeader">
                <Setter Property="Background" Value="{DynamicResource SystemAccentColor}" />
                <Setter Property="Foreground" Value="{DynamicResource SystemBaseHighColor}" />
                <Setter Property="FontWeight" Value="SemiBold" />
                <Setter Property="FontSize" Value="14" />
                <Setter Property="BorderBrush" Value="{DynamicResource SystemAccentColor}" />
                <Setter Property="SeparatorBrush" Value="Transparent" />
            </Style>
        </UserControl.Styles>
        <UserControl.Resources>
            <converters:BottomPanelHeightConverter x:Key="BottomPanelHeightConverter" />
        </UserControl.Resources>
    <Border CornerRadius="12" ClipToBounds="True" Background="{DynamicResource SystemChromeLowColor}">
        <customControls:ConsoleSplitControl
            IsBottomPanelVisible="{Binding IsBottomPanelVisible}"
            IsBottomPanelCollapsed="{Binding IsBottomPanelCollapsed, Mode=TwoWay}">
            <customControls:ConsoleSplitControl.MainContent>
                <Grid Background="{DynamicResource SystemChromeLowColor}">
                    <Grid RowDefinitions="Auto,*">
                        <StackPanel Grid.Row="0">
                            <menus:HeaderRow
                                Title="{x:Static lang:Resources.InstallPackages}"
                                TitleIcon="Download"
                                TitleCommand="{Binding ToggleConfirmAction}"
                                ShowTitleButton="True"
                                ShowSecondaryButton="True"
                                SecondaryButtonCommand="{Binding InstallLocalPackageCommand}"
                                SecondaryButtonText="{x:Static lang:Resources.InstallLocalPackages}"
                                SecondaryButtonTooltip="{x:Static lang:Resources.InstallLocalPackagesTooltip}"
                                SecondaryButtonIcon="FolderOpen"
                                SearchWatermark="{x:Static lang:Resources.SearchPackages}"
                                SearchText="{Binding SearchText, Mode=TwoWay}"
                                SyncCommand="{Binding SyncCommand}"
                                SyncTooltip="{x:Static lang:Resources.Sync}"
                                SyncIcon="Sync"/>
                        </StackPanel>
                        <DataGrid
                            Name="PackageDataGrid"
                            Grid.Row="1"
                            ItemsSource="{Binding AvailablePackages}"
                            AutoGenerateColumns="False"
                            CanUserResizeColumns="True"
                            IsReadOnly="True"
                            GridLinesVisibility="None"
                            DoubleTapped="DataGrid_DoubleTapped">
                            <DataGrid.Styles>
                                <Style Selector="DataGridRow" x:DataType="models:PackageModel">
                                    <Setter Property="ContextMenu">
                                        <Setter.Value>
                                            <ContextMenu x:DataType="models:PackageModel">
                                                <MenuItem Header="{Binding Name}" FontWeight="Bold" IsEnabled="False" />
                                                <Separator />
                                                <MenuItem Header="{Binding Version, StringFormat='{x:Static lang:Resources.LabelVersion}'}"
                                                          IsEnabled="False" />
                                                <MenuItem Header="{Binding SizeString, StringFormat='{x:Static lang:Resources.LabelSize}'}"
                                                          IsEnabled="False" />
                                                <MenuItem IsEnabled="False">
                                                    <MenuItem.Header>
                                                        <TextBlock
                                                            Text="{Binding Description, StringFormat='{x:Static lang:Resources.LabelDescription}'}"
                                                            TextWrapping="Wrap"
                                                            MaxWidth="300" />
                                                    </MenuItem.Header>
                                                </MenuItem>
                                                <MenuItem Click="OpenUrl_Click" CommandParameter="{Binding Url}">
                                                    <MenuItem.Header>
                                                        <TextBlock Text="{Binding Url}"
                                                                   Foreground="#1976D2"
                                                                   TextDecorations="Underline" />
                                                    </MenuItem.Header>
                                                </MenuItem>
                                            </ContextMenu>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </DataGrid.Styles>
                            <DataGrid.Columns>
                                <DataGridTemplateColumn
                                    Header="{x:Static lang:Resources.Name}"
                                    MinWidth="200"
                                    Width="*">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate DataType="models:PackageModel">
                                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center"
                                                        Margin="12,0">
                                                <TextBlock Text="{Binding Name}" VerticalAlignment="Center" />
                                                <avalonia:MaterialIcon
                                                    Kind="CheckCircle"
                                                    Foreground="Green"
                                                    Width="16" Height="16"
                                                    Margin="8,0,0,0"
                                                    IsVisible="{Binding IsInstalled}"
                                                    ToolTip.Tip="{x:Static lang:Resources.Installed}" />
                                            </StackPanel>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                                <DataGridTextColumn
                                    Header="{x:Static lang:Resources.Version}"
                                    Binding="{Binding Version}"
                                    Width="*" />
                                <DataGridTextColumn
                                    Header="{x:Static lang:Resources.PackageSize}"
                                    Binding="{Binding SizeString}"
                                    Width="*" />
                                <DataGridTextColumn
                                    Header="{x:Static lang:Resources.PackageRepository}"
                                    Binding="{Binding Repository}"
                                    Width="*" />
                                <DataGridTemplateColumn
                                    Header=""
                                    CanUserResize="False"
                                    Width="60">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <CheckBox IsChecked="{Binding IsChecked, Mode=TwoWay}"
                                                      HorizontalAlignment="Center" />
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Grid>
                    <Border Background="#80000000"
                            IsVisible="{Binding ShowConfirmDialog}"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Stretch">
                        <Border Background="{DynamicResource SystemChromeLowColor}"
                                BorderBrush="{DynamicResource SystemBaseLowColor}"
                                CornerRadius="8"
                                Padding="20"
                                Width="300"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                BoxShadow="0 10 30 0 #A0000000">
                            <StackPanel Spacing="15">
                                <TextBlock Text="{x:Static lang:Resources.AreYouSure}" FontWeight="Bold" FontSize="18"
                                           HorizontalAlignment="Center" />
                                <TextBlock Text="{x:Static lang:Resources.WillInstallPackages}" TextWrapping="Wrap"
                                           HorizontalAlignment="Center" TextAlignment="Center" />
                                <Grid ColumnDefinitions="*,*">
                                    <Button Grid.Column="0" Content="{x:Static lang:Resources.Cancel}"
                                            HorizontalAlignment="Stretch" Margin="0,0,5,0"
                                            Command="{Binding ToggleConfirmAction}" />
                                    <Button Grid.Column="1" Content="{x:Static lang:Resources.Install}"
                                            Background="{DynamicResource SystemAccentColor}"
                                            HorizontalAlignment="Stretch"
                                            Command="{Binding AlpmInstallCommand}" />
                                </Grid>
                            </StackPanel>
                        </Border>
                    </Border>
                </Grid>
            </customControls:ConsoleSplitControl.MainContent>
            <customControls:ConsoleSplitControl.BottomContent>
                <Grid IsVisible="{Binding !IsBottomPanelCollapsed}">
                    <ScrollViewer>
                        <customControls:RichConsoleControl Logs="{Binding Logs}" />
                    </ScrollViewer>
                </Grid>
            </customControls:ConsoleSplitControl.BottomContent>
        </customControls:ConsoleSplitControl>
    </Border>
</UserControl>