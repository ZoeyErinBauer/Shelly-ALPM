<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:icons="using:Material.Icons.Avalonia"
        xmlns:lang="clr-namespace:Shelly_UI.Assets"
        mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="200"
        x:Class="Shelly_UI.Views.QuestionDialog"
        Title="{x:Static lang:Resources.Question}"
        Width="400"
        Height="180"
        WindowStartupLocation="CenterOwner"
        CanResize="False"
        ShowInTaskbar="False"
        SystemDecorations="BorderOnly"
        x:CompileBindings="True">
    <Panel Background="{DynamicResource SystemChromeLowColor}">
        <Border CornerRadius="12" ClipToBounds="True"  BorderThickness="3"
                                  BorderBrush="{DynamicResource SystemChromeMediumColor}" Background="{DynamicResource SystemChromeLowColor}">
            <Grid Margin="20" RowDefinitions="*, Auto">
            <StackPanel Grid.Row="0" VerticalAlignment="Center" Spacing="15">
                <icons:MaterialIcon Kind="HelpCircle" Width="32" Height="32"
                                    HorizontalAlignment="Center"
                                    Foreground="{DynamicResource SystemAccentColor}" />
                <TextBlock x:Name="QuestionText"
                           Text="Question text goes here"
                           TextWrapping="Wrap"
                           TextAlignment="Center"
                           FontSize="14" />
            </StackPanel>
            <StackPanel Grid.Row="1"
                        Orientation="Horizontal"
                        HorizontalAlignment="Center"
                        Spacing="15">
                <Button x:Name="YesButton"
                        Content="{x:Static lang:Resources.Yes}"
                        Width="80"
                        HorizontalContentAlignment="Center"
                        VerticalContentAlignment="Center"
                        Click="YesButton_Click" />
                <Button x:Name="NoButton"
                        Content="{x:Static lang:Resources.No}"
                        Width="80"
                        HorizontalContentAlignment="Center"
                        VerticalContentAlignment="Center"
                        Click="NoButton_Click" />
            </StackPanel>
            </Grid>
        </Border>
    </Panel>
</Window>