<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:Shelly_UI.ViewModels"
             xmlns:lang="clr-namespace:Shelly_UI.Assets"
             xmlns:avalonia="clr-namespace:Material.Icons.Avalonia;assembly=Material.Icons.Avalonia"
             xmlns:models="clr-namespace:Shelly_UI.Models"
             xmlns:customControls="clr-namespace:Shelly_UI.CustomControls"
             xmlns:menus="clr-namespace:Shelly_UI.CustomControls.Menus"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:DataType="vm:MetaSearchViewModel"
             x:Class="Shelly_UI.Views.MetaSearchWindow"
             x:CompileBindings="True">

    <UserControl.Styles>
        <Style Selector="DataGridColumnHeader">
            <Setter Property="Background" Value="{DynamicResource SystemAccentColor}" />
            <Setter Property="Foreground" Value="{DynamicResource SystemBaseHighColor}" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="BorderBrush" Value="{DynamicResource SystemAccentColor}" />
            <Setter Property="SeparatorBrush" Value="Transparent" />
        </Style>
    </UserControl.Styles>

    <Border CornerRadius="12" ClipToBounds="True" Background="{DynamicResource SystemChromeLowColor}">
        <customControls:ConsoleSplitControl
            IsBottomPanelVisible="{Binding IsBottomPanelVisible}"
            IsBottomPanelCollapsed="{Binding IsBottomPanelCollapsed, Mode=TwoWay}">
            <customControls:ConsoleSplitControl.MainContent>
                <Grid Background="{DynamicResource SystemChromeLowColor}">
                    <Grid RowDefinitions="Auto,*">
                        <menus:HeaderRow
                            Title="Meta Search"
                            TitleIcon="Search"
                            ShowTitleButton="False"
                            ShowSearchBox="False" />
                        <DataGrid
                            Name="MetaSearchDataGrid"
                            Grid.Row="1"
                            ItemsSource="{Binding AvailablePackages}"
                            AutoGenerateColumns="False"
                            CanUserResizeColumns="True"
                            IsReadOnly="True"
                            GridLinesVisibility="None">
                            <DataGrid.Styles>
                                <Style Selector="DataGridRow" x:DataType="models:PackageModel">
                                    <Setter Property="ContextMenu">
                                        <Setter.Value>
                                            <ContextMenu x:DataType="models:PackageModel">
                                                <MenuItem Header="{Binding Name}" FontWeight="Bold" IsEnabled="False" />
                                                <Separator />
                                                <MenuItem Header="{Binding Version, StringFormat='Version: {0}'}"
                                                          IsEnabled="False" />
                                                <MenuItem Header="{Binding SizeString, StringFormat='Size: {0}'}"
                                                          IsEnabled="False" />
                                                <MenuItem IsEnabled="False">
                                                    <MenuItem.Header>
                                                        <TextBlock
                                                            Text="{Binding Description, StringFormat='Description: {0}'}"
                                                            TextWrapping="Wrap"
                                                            MaxWidth="300" />
                                                    </MenuItem.Header>
                                                </MenuItem>
                                            </ContextMenu>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </DataGrid.Styles>
                            <DataGrid.Columns>
                                <DataGridTemplateColumn
                                    Header="{x:Static lang:Resources.Name}"
                                    MinWidth="200"
                                    Width="*">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate DataType="models:MetaPackageModel">
                                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center"
                                                        Margin="12,0">
                                                <TextBlock Text="{Binding Name}" VerticalAlignment="Center" />
                                                <avalonia:MaterialIcon
                                                    Kind="CheckCircle"
                                                    Foreground="Green"
                                                    Width="16" Height="16"
                                                    Margin="8,0,0,0"
                                                    IsVisible="{Binding IsInstalled}"
                                                    ToolTip.Tip="{x:Static lang:Resources.Installed}" />
                                            </StackPanel>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                                <DataGridTextColumn
                                    Header="Id"
                                    Binding="{Binding Id}"
                                    Width="*" />
                                <DataGridTextColumn
                                    Header="Package Type"
                                    Binding="{Binding PackageType}"
                                    Width="*" />
                                <DataGridTextColumn
                                    Header="{x:Static lang:Resources.Version}"
                                    Binding="{Binding Version}"
                                    Width="*" />
                                <DataGridTextColumn
                                    Header="Description"
                                    Binding="{Binding Description}"
                                    Width="*" />
                                <DataGridTextColumn
                                    Header="{x:Static lang:Resources.PackageRepository}"
                                    Binding="{Binding Repository}"
                                    Width="*" />
                                <DataGridTextColumn
                                    Header="Summary"
                                    Binding="{Binding Summary}"
                                    Width="*" />
                            </DataGrid.Columns>
                        </DataGrid>
                    </Grid>
                </Grid>
            </customControls:ConsoleSplitControl.MainContent>
            <customControls:ConsoleSplitControl.BottomContent>
                <Grid IsVisible="{Binding !IsBottomPanelCollapsed}">
                    <ScrollViewer>
                        <customControls:RichConsoleControl Logs="{Binding Logs}" />
                    </ScrollViewer>
                </Grid>
            </customControls:ConsoleSplitControl.BottomContent>
        </customControls:ConsoleSplitControl>
    </Border>
</UserControl>