<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:Shelly_UI.ViewModels"
             xmlns:lang="clr-namespace:Shelly_UI.Assets"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:DataType="vm:PackageViewModel"
             x:Class="Shelly_UI.Views.PackageWindow">
    <UserControl.Styles>
        <Style Selector="DataGridColumnHeader">
            <Setter Property="Background" Value="{DynamicResource SystemAccentColor}" />
            <Setter Property="Foreground" Value="{DynamicResource SystemBaseHighColor}" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="Padding" Value="12,4" />
            <Setter Property="BorderBrush" Value="{DynamicResource SystemAccentColor}" />
            <Setter Property="SeparatorBrush" Value="Transparent" />
        </Style>
    </UserControl.Styles>
    <Grid RowDefinitions="Auto,*">
        <Border Background="{DynamicResource SystemAccentColor}" Padding="8">
            <Grid ColumnDefinitions="*,Auto,Auto" VerticalAlignment="Center">
                <TextBlock
                    Text="{x:Static lang:Resources.Packages}"
                    FontWeight="Bold"
                    Foreground="{DynamicResource SystemBaseHighColor}"
                    VerticalAlignment="Center" />
                <TextBox
                    Grid.Column="1"
                    Width="220"
                    Margin="12,0"
                    Watermark="{x:Static lang:Resources.SearchPackages}"
                    Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                    Background="{DynamicResource ChromeWhite}"
                    Foreground="{DynamicResource AltMediumLow}"
                    BorderThickness="1"
                    BorderBrush="{DynamicResource SystemBaseHighColor}"
                    CornerRadius="4" />
            </Grid>
        </Border>
        <DataGrid
            Grid.Row="1"
            ItemsSource="{Binding FilteredPackages}"
            AutoGenerateColumns="False"
            IsReadOnly="True"
            GridLinesVisibility="None">
            <DataGrid.Columns>
                <DataGridTextColumn
                    Header="{x:Static lang:Resources.PackageName}"
                    Binding="{Binding Name}"
                    Width="*" />
                <DataGridTextColumn
                    Header="{x:Static lang:Resources.Version}"
                    Binding="{Binding Version}"
                    Width="160" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>


</UserControl>