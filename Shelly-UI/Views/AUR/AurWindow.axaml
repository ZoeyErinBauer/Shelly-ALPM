<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:lang="clr-namespace:Shelly_UI.Assets"
             xmlns:avalonia="clr-namespace:Material.Icons.Avalonia;assembly=Material.Icons.Avalonia"
             xmlns:models="clr-namespace:Shelly_UI.Models"
             xmlns:converters="clr-namespace:Shelly_UI.Converters"
             xmlns:customControls="clr-namespace:Shelly_UI.CustomControls"
             xmlns:aur="clr-namespace:Shelly_UI.ViewModels.AUR"
             xmlns:menus="clr-namespace:Shelly_UI.CustomControls.Menus"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:DataType="aur:AurViewModel"
             x:Class="Shelly_UI.Views.AUR.AurWindow"
             x:CompileBindings="True">
    <UserControl.Styles>
        <Style Selector="DataGridColumnHeader">
            <Setter Property="Background" Value="{DynamicResource SystemAccentColor}" />
            <Setter Property="Foreground" Value="{DynamicResource SystemBaseHighColor}" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="BorderBrush" Value="{DynamicResource SystemAccentColor}" />
            <Setter Property="SeparatorBrush" Value="Transparent" />
        </Style>
    </UserControl.Styles>
    <UserControl.Resources>
        <converters:BottomPanelHeightConverter x:Key="BottomPanelHeightConverter" />
    </UserControl.Resources>
    <Border CornerRadius="12" ClipToBounds="True" Background="{DynamicResource SystemChromeLowColor}">

        <customControls:ConsoleSplitControl
            IsBottomPanelVisible="{Binding IsBottomPanelVisible}"
            IsBottomPanelCollapsed="{Binding IsBottomPanelCollapsed, Mode=TwoWay}">
            <customControls:ConsoleSplitControl.MainContent>
                <Grid Background="{DynamicResource SystemChromeLowColor}">
                    <TextBlock Text="Search To get started!" HorizontalAlignment="Center" VerticalAlignment="Center"
                               ZIndex="10" Opacity=".7" IsVisible="{Binding HelpTextVisibility}" />
                    <Grid RowDefinitions="Auto,*">
                        <menus:HeaderRow
                            Title="Install AUR Package(s)"
                            TitleIcon="Download"
                            TitleCommand="{Binding ToggleConfirmAction}"
                            SearchWatermark="{x:Static lang:Resources.SearchPackages}"
                            SearchText="{Binding SearchText, Mode=TwoWay}"
                            SyncCommand="{Binding SearchCommand}"
                            SyncTooltip="{x:Static lang:Resources.Sync}" 
                            SearchCommand="{Binding SearchCommand}"
                            SyncIcon="Search"
                            />
                        <DataGrid
                            Name="AurDataGrid"
                            Grid.Row="1"
                            ItemsSource="{Binding SearchedPackages}"
                            AutoGenerateColumns="False"
                            CanUserResizeColumns="True"
                            IsReadOnly="True"
                            GridLinesVisibility="None"
                            DoubleTapped="DataGrid_DoubleTapped">
                            <DataGrid.Styles>
                                <Style Selector="DataGridRow" x:DataType="models:AurModel">
                                    <Setter Property="ToolTip.Tip">
                                        <Template>
                                            <StackPanel Margin="5" MaxWidth="300">
                                                <TextBlock Text="{Binding Name }" FontWeight="Bold" Margin="0,0,0,5" />
                                                <TextBlock Text="{Binding Description}" TextWrapping="Wrap"
                                                           FontSize="12" />
                                                <Separator Margin="0,5"
                                                           Background="{DynamicResource SystemBaseLowColor}" />
                                                <TextBlock Text="Right click for additional information" FontSize="11"
                                                           Opacity="0.7" />
                                            </StackPanel>
                                        </Template>
                                    </Setter>
                                    <Setter Property="ContextMenu">
                                        <Setter.Value>
                                            <ContextMenu x:DataType="models:AurModel">
                                                <MenuItem Header="{Binding Name}" FontWeight="Bold" IsEnabled="False" />
                                                <Separator />
                                                <MenuItem Header="{Binding Version, StringFormat='Version: {0}'}"
                                                          IsEnabled="False" />
                                                <MenuItem Header="{Binding Maintainer, StringFormat='Maintainer: {0}'}"
                                                          IsEnabled="False" />
                                                <MenuItem
                                                    Header="{Binding FirstSubmitted, StringFormat='First Submitted: {0}'}"
                                                    IsEnabled="False" />
                                                <MenuItem
                                                    Header="{Binding LastModified, StringFormat='Last Modified: {0}'}"
                                                    IsEnabled="False" />
                                                <MenuItem Click="OpenUrl_Click" CommandParameter="{Binding Url}">
                                                    <MenuItem.Header>
                                                        <TextBlock Text="{Binding Url}"
                                                                   Foreground="#1976D2"
                                                                   TextDecorations="Underline" />
                                                    </MenuItem.Header>
                                                </MenuItem>
                                            </ContextMenu>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </DataGrid.Styles>
                            <DataGrid.Columns>
                                <DataGridTemplateColumn
                                    Header="{x:Static lang:Resources.Name}"
                                    MinWidth="200"
                                    Width="*">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate DataType="models:AurModel">
                                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center"
                                                        Margin="12,0">
                                                <TextBlock Text="{Binding Name}" VerticalAlignment="Center" />
                                                <avalonia:MaterialIcon
                                                    Kind="CheckCircle"
                                                    Foreground="Green"
                                                    Width="16" Height="16"
                                                    Margin="8,0,0,0"
                                                    IsVisible="{Binding IsInstalled}"
                                                    ToolTip.Tip="{x:Static lang:Resources.Installed}" />
                                            </StackPanel>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                                <DataGridTextColumn
                                    Header="{x:Static lang:Resources.Version}"
                                    Binding="{Binding Version}"
                                    Width="*" />
                                <DataGridTextColumn
                                    Header="Votes"
                                    Binding="{Binding NumVotes}"
                                    Width="*" />
                                <DataGridTextColumn
                                    Header="Popularity"
                                    Binding="{Binding Popularity}"
                                    Width="*" />
                                <DataGridTemplateColumn
                                    Header=""
                                    CanUserResize="False"
                                    Width="60">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <CheckBox IsChecked="{Binding IsChecked, Mode=TwoWay}"
                                                      HorizontalAlignment="Center" />
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Grid>
                    <Border Background="#80000000"
                            IsVisible="{Binding ShowConfirmDialog}"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Stretch">
                        <Border Background="{DynamicResource SystemChromeLowColor}"
                                BorderBrush="{DynamicResource SystemBaseLowColor}"
                                CornerRadius="8"
                                Padding="20"
                                Width="300"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                BoxShadow="0 10 30 0 #A0000000">
                            <StackPanel Spacing="15">
                                <TextBlock Text="{x:Static lang:Resources.AreYouSure}" FontWeight="Bold" FontSize="18"
                                           HorizontalAlignment="Center" />
                                <TextBlock Text="{x:Static lang:Resources.WillInstallPackages}" TextWrapping="Wrap"
                                           HorizontalAlignment="Center" TextAlignment="Center" />
                                <Grid ColumnDefinitions="*,*">
                                    <Button Grid.Column="0" Content="{x:Static lang:Resources.Cancel}"
                                            HorizontalAlignment="Stretch" Margin="0,0,5,0"
                                            Command="{Binding ToggleConfirmAction}" />
                                    <Button Grid.Column="1" Content="{x:Static lang:Resources.Install}"
                                            Background="{DynamicResource SystemAccentColor}"
                                            HorizontalAlignment="Stretch"
                                            Command="{Binding AlpmInstallCommand}" />
                                </Grid>
                            </StackPanel>
                        </Border>
                    </Border>
                </Grid>
            </customControls:ConsoleSplitControl.MainContent>
            <customControls:ConsoleSplitControl.BottomContent>

                <Grid IsVisible="{Binding !IsBottomPanelCollapsed}">
                    <ScrollViewer>
                        <customControls:RichConsoleControl Logs="{Binding Logs}" />
                    </ScrollViewer>
                </Grid>
            </customControls:ConsoleSplitControl.BottomContent>
        </customControls:ConsoleSplitControl>
    </Border>
</UserControl>