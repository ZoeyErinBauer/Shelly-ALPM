<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:lang="clr-namespace:Shelly_UI.Assets"
        mc:Ignorable="d" d:DesignWidth="500" d:DesignHeight="400"
        x:Class="Shelly_UI.Views.UpdateProgressDialog"
        Title="{x:Static lang:Resources.UpdatingShelly}"
        Width="500"
        Height="400"
        WindowStartupLocation="CenterOwner"
        CanResize="False"
        ShowInTaskbar="False"
        SystemDecorations="BorderOnly"
        x:CompileBindings="True">
    <Border CornerRadius="12" ClipToBounds="True" Background="{DynamicResource SystemChromeLowColor}">
        <Grid Margin="20" RowDefinitions="Auto, *, Auto">
            <TextBlock Grid.Row="0"
                       Text="{x:Static lang:Resources.InstallingUpdate}"
                       FontSize="16"
                       FontWeight="SemiBold"
                       Margin="0,0,0,10" />

            <Border Grid.Row="1"
                    Background="#1E1E1E"
                    CornerRadius="4"
                    Padding="10">
                <ScrollViewer x:Name="OutputScrollViewer">
                    <TextBlock x:Name="OutputText"
                               FontFamily="Consolas,Menlo,monospace"
                               FontSize="12"
                               Foreground="#CCCCCC"
                               TextWrapping="Wrap" />
                </ScrollViewer>
            </Border>

            <Button x:Name="CloseButton"
                    Grid.Row="2"
                    Content="{x:Static lang:Resources.Close}"
                    Width="80"
                    HorizontalAlignment="Right"
                    Margin="0,10,0,0"
                    IsEnabled="False"
                    Click="CloseButton_Click" />
        </Grid>
    </Border>
</Window>